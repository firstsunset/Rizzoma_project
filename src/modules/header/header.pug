include ../../modules/mixin/button/button
mixin header(options) 
    -
        const {
           username = '' 
        } = options || {}
    .header 
        .wrapper 
            .header-body
                .header-logo 
                    a(href="landing.html"): img(src=require("./logo.svg"), alt="Logo")
                .nav
                    .nav-item 
                        a(href="/mock-address/change-me").nav-link О нас 
                    .nav-item.nav-item-dropdown
                        .nav-item-dropdown-heading
                            a(href="/mock-address/change-me").nav-link Услуги 
                            span.nav-arrow expand_more
                        .nav-item-dropdown-content
                            a(href="/mock-address/change-me").nav-link-dropdown 
                            a(href="/mock-address/change-me").nav-link-dropdown  
                            a(href="/mock-address/change-me").nav-link-dropdown 
                    .nav-item
                        .nav-item-text
                            a(href="/mock-address/change-me").nav-link Вакансии
                    .nav-item
                        .nav-item-text
                            a(href="/mock-address/change-me").nav-link Новости
                    .nav-item.nav-item-dropdown
                        .nav-item-dropdown-heading
                            a(href="/mock-address/change-me").nav-link Соглашения 
                            span.nav-arrow expand_more
                        .nav-item-dropdown-content
                            a(href="/mock-address/change-me").nav-link-dropdown 
                            a(href="/mock-address/change-me").nav-link-dropdown  
                            a(href="/mock-address/change-me").nav-link-dropdown 
                    if username !== ''
                        .nav-item.nav-item-line
                        .nav-item.nav-item-username= username
                    else
                        .headerbtn_signin
                            +button({ type: 'bordercolor_header', text: 'войти', isHovered: false, link: '"sign_in.html"', })
                        .headerbtn_registration 
                            +button({ type: 'long_header', text: 'зарегистрироваться', link: '"registration.html"' })