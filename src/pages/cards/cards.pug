doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    title= "Cards"
    
  body
    div.logogroup 
        a(href="#"): img(src=require("./logo_group.svg"), alt="logo_group")
    .container
      .cards-group
        .cards-group-column
          .card.cards-seach-room 
            +seach_room
          .card.cards-registration 
            +registration
        .cards-group-column
          .card.cards-room-number 
            +room_number          
          .card.cards-signin 
            +signin
        .cards-group-column
          .card.cards-datepicker 
           
          .card.cards-typeroom 
            +type_room({ number: '888', lux: 'люкс', cost: '9 990₽', count: '5', rate: '65' })(class='type-room-picture1')
          .card.cards-typeroom 
            +type_room({ number: '840', cost: '9 990₽', count: '4', rate: '145' })(class='type-room-picture2')
